<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.CustomerApp.CustomerViews.CustomerControls.CustomerControl">

    <Grid RowDefinitions="Auto,Auto,Auto, Auto, Auto, Auto, Auto, Auto,Auto"
          ColumnDefinitions=".80*"
          Padding="15"
          Margin="15"
          RowSpacing="15">

        <Label Text="Name"
               FontSize="15"
               Grid.Row="0"/>
        <Entry x:Name="Entry_Name"
               Grid.Row="1"/>

        <Label Text="Email Address"
               FontSize="15"
               Grid.Row="2"/>
        <Entry x:Name="Entry_Email"
               Grid.Row="3"/>

        <Label Text="Address"
               FontSize="15"
               Grid.Row="4"/>
        <Entry x:Name="Entry_Address"
               Grid.Row="5"/>

        <Label Text="Phone Number"
               FontSize="15"
               Grid.Row="6"/>
        <Entry x:Name="Entry_PhoneNumber"
               Grid.Row="7"/>

        <Button Text="Save"
                Grid.Row="8"
               HorizontalOptions="Center"
                FontSize="15"
                x:Name="BtnSaveContact"
                Clicked="BtnSaveContact_Clicked"/>

    </Grid>
    
</ContentView>
